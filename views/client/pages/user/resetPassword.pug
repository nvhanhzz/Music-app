extends ../../layouts/default.pug

block main 
    .container
        div(style="height: 70px")
        form(action="/user/password/reset?_method=PATCH" method="POST")
            h2(style="text-align: center") Đặt lại mật khẩu
            .row
                .col-3 
                .col-6
                    .form-group
                        label(for='password') Mật khẩu
                        input#password.form-control(type='password' name="password" placeholder="Nhập mật khẩu")

            .row
                .col-3 
                .col-6
                    .form-group
                        label(for='confirm-password') Nhập lại mật khẩu
                        input#confirm-password.form-control(type='password' name="confirmPassword" placeholder="Nhập lại mật khẩu")

            .row
                .col-3 
                .col-6
                    button.btn.btn-primary(type='submit' style="width: 100%; margin-top: 20px;") Submit