extends ../../layouts/default.pug
include ../../mixins/notification.pug

block addCss 
    link(rel="stylesheet", href="/admin/css/createPage.css")

block main
    h2 #{pageTitle}

    form(action=`${prefixAdmin}/roles/update/${role.id}?_method=PATCH`, method="POST")
        .form-group
            label(for="title") Tên:
            input#title.form-control(type="text", name="title", placeholder="Nhập tên nhóm quyền" value=role.title)

        div.form-group
            label(for="description") Mô tả:
            textarea#description.form-control(name="description", rows="4", placeholder="Nhập mô tả nhóm quyền") #{role.description}

        div.form-group
            button.btn.btn-primary(type="submit") Tạo mới