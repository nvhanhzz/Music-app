extends ../../layouts/default.pug

block main 
    .container
        div(style="height: 70px")
        form(action="/user/password/change?_method=PATCH" method="POST")
            h2(style="text-align: center") Đổi mật khẩu
            .row
                .col-3 
                .col-6
                    .form-group
                        label(for='password') Mật khẩu hiện tại
                        input#password.form-control(type='password' name="oldPassword" placeholder="Nhập mật khẩu hiện tại")
            .row
                .col-3 
                .col-6
                    .form-group
                        label(for='password') Mật khẩu mới
                        input#password.form-control(type='password' name="password" placeholder="Nhập mật khẩu mới")

            .row
                .col-3 
                .col-6
                    .form-group
                        label(for='confirm-password') Nhập lại mật khẩu mới
                        input#confirm-password.form-control(type='password' name="confirmPassword" placeholder="Nhập lại mật khẩu mới")

            .row
                .col-3 
                .col-6
                    button.btn.btn-primary(type='submit' style="width: 100%; margin-top: 20px;") Cập nhật
