extends ../../layouts/default.pug

block main 
    .container
        div(style="height: 70px")
        form(action="/user/password/forgot" method="POST")
            h2(style="text-align: center") Quên mật khẩu
            .row
                .col-3 
                .col-6
                    .form-group
                        label(for='email') Email
                        input#email.form-control(type='email' name="email" placeholder="Nhập email")

            .row
                .col-3 
                .col-6
                    button.btn.btn-primary(type='submit' style="width: 100%; margin-top: 20px;") Nhận OTP